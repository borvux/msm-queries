<h1>Actor #<%= @actor.id %> details</h1>

<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>

  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>

  <dt>Image</dt>
  <dd>
    <img src="<%= @actor.image %>" alt="image of director" width="250px">
  </dd>

  <dt>Created at</dt>
  <dd><%= @actor.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @actor.updated_at %></dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>

  <% @matching_character.each do |character| %>
    <tr>
      <% matching_movie = Movie.where({ :id => character.movie_id }) %>
      <% movie = matching_movie.first %>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <% matching_director = Director.where({ :id => movie.director_id })%>
      <% director = matching_director.first %>
      <td><%= director.name %></td>
      <td><%= character.name %></td>
      <td>
        <a href="/movies/<%= movie.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
