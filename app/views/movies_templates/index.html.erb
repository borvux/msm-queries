<h1>List of all movies</h1>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% Movie.all.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td>
        <img src="<%= movie.image %>" alt="picture of <% movie.title %>" width="250px">
      </td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <% movie_director = Director.where({ :id => movie.director_id }) %>
      <% director = movie_director.first %>
      <td><%= director.name %></td>
      <td>
        <a href="/movies/<%= movie.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
